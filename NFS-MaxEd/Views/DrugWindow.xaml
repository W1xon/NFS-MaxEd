<Window
    AllowsTransparency="True"
    Background="Transparent"
    FontSize="14"
    Height="300"
    ResizeMode="NoResize"
    Title="Drag Info"
    Width="600"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d"
    x:Class="NFSMaxEd.Views.DrugWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NFSMaxEd.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Border
            CornerRadius="10"
            HorizontalAlignment="Center"
            Padding="25"
            Style="{StaticResource CardStyle}"
            VerticalAlignment="Center">

            <!--  Яркое свечение  -->
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="25"
                    Color="#FF00BFFF"
                    Opacity="0.9"
                    ShadowDepth="0" />
            </Border.Effect>

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="450">

                <TextBlock
                    FontSize="16"
                    Foreground="{StaticResource TextPrimary}"
                    Style="{StaticResource LabelStyle}"
                    TextAlignment="Center"
                    TextWrapping="Wrap">
                    <Run Text="The Drag mode is still under development. You can create tracks in this mode, " />
                    <Run
                        FontWeight="Bold"
                        Foreground="{StaticResource AccentSecondary}"
                        Text="but we do not guarantee that they will work correctly in-game." />
                </TextBlock>




                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">


                    <Button
                        Click="Cancel_Click"
                        Content="Cancel"
                        Height="35"
                        Style="{StaticResource ControlButtonStyle}"
                        Width="100" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>

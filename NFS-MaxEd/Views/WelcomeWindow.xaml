<Window
    AllowsTransparency="True"
    Background="Transparent"
    Height="720"
    ResizeMode="NoResize"
    Title="Welcome to NFSMaxEd"
    Width="600"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    x:Class="NFSMaxEd.Views.WelcomeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border
        Background="{StaticResource BackgroundDark}"
        BorderBrush="{StaticResource AccentColor}"
        BorderThickness="2"
        CornerRadius="10">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Заголовок  -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="{StaticResource AccentColor}"
                    HorizontalAlignment="Center"
                    Text="Welcome to NFSMaxEd!" />
                <TextBlock
                    FontSize="14"
                    Foreground="{StaticResource TextSecondary}"
                    HorizontalAlignment="Center"
                    Margin="0,8,0,0"
                    Text="Script Generator for Need for Speed" />
            </StackPanel>

            <!--  Контент  -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <!--  Благодарность  -->
                <Border
                    Background="{StaticResource BackgroundMedium}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="5"
                    Margin="0,0,0,15"
                    Padding="20">
                    <StackPanel>
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource AccentSecondary}"
                            Margin="0,0,0,12"
                            Text="Thank You for Installing!" />
                        <TextBlock
                            FontSize="13"
                            Foreground="{StaticResource TextPrimary}"
                            LineHeight="22"
                            TextWrapping="Wrap">
                            We would be happy if you support us by giving a star on GitHub!<LineBreak />
                            <LineBreak />
                            You can find information about the creators in the "About Authors" page.</TextBlock>
                    </StackPanel>
                </Border>

                <!--  Предупреждение о багах  -->
                <Border
                    Background="{StaticResource BackgroundMedium}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="5"
                    Margin="0,0,0,15"
                    Padding="20">
                    <StackPanel>
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource AccentColor}"
                            Margin="0,0,0,12"
                            Text="First Release Notice" />
                        <TextBlock
                            FontSize="13"
                            Foreground="{StaticResource TextPrimary}"
                            LineHeight="22"
                            TextWrapping="Wrap">
                            We have tested the program and found no errors, but the first release is what it is - it may contain bugs. We will be glad if you report any problems to us.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!--  Контакты  -->
                <Border
                    Background="{StaticResource BackgroundMedium}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="20">
                    <StackPanel>
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource AccentSecondary}"
                            Margin="0,0,0,12"
                            Text="Support and Contact" />
                        <TextBlock
                            FontSize="13"
                            Foreground="{StaticResource TextPrimary}"
                            LineHeight="22"
                            TextWrapping="Wrap">
                            For all questions you can write to Issues or join our chat:<LineBreak />
                            <Hyperlink
                                Foreground="{StaticResource AccentSecondary}"
                                NavigateUri="https://t.me/NFS_MaxEd"
                                RequestNavigate="Hyperlink_RequestNavigate">
                                https://t.me/NFS_MaxEd
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!--  Нижняя часть  -->
            <StackPanel Grid.Row="2" Margin="0,20,0,0">
                <TextBlock
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource AccentColor}"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20"
                    Text="Happy Modding!" />

                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <CheckBox
                        Content="Don't show again"
                        Foreground="{StaticResource TextSecondary}"
                        Margin="0,0,20,0"
                        VerticalAlignment="Center"
                        x:Name="DontShowAgainCheckBox" />
                    <Button
                        Background="{StaticResource AccentColor}"
                        BorderThickness="0"
                        Click="OkButton_Click"
                        Content="Let's Start!"
                        Cursor="Hand"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource TextPrimary}"
                        Height="40"
                        Width="150">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="15,8"
                                                x:Name="border">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" TargetName="border" Value="{StaticResource AccentHover}" />
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" TargetName="border" Value="{StaticResource AccentPressed}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
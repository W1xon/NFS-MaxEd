<Window x:Class="NFSMaxEd.Views.MapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Title="MapWindow" Height="720" Width="1280"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="False">
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="1" ClipToBounds="True">
            <Canvas x:Name="MapCanvas" 
                    Background="White"
                    ClipToBounds="True"
                    MouseWheel="MapCanvas_MouseWheel"
                    MouseLeftButtonDown="MapCanvas_MouseLeftButtonDown"
                    MouseLeftButtonUp="MapCanvas_MouseLeftButtonUp"
                    MouseMove="MapCanvas_MouseMove">
                <Image x:Name="MapImage"
                       Source="/Assets/map.png" 
                       Canvas.Left="0"
                       Canvas.Top="0">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="ScaleTransform"/>
                            <TranslateTransform x:Name="TranslateTransform"/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Canvas>
        </Border>
    </Grid>
</Window>
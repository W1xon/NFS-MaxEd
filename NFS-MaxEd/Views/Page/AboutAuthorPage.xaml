<Page
    Background="#1A1A1A"
    CacheMode="BitmapCache"
    x:Class="NFSMaxEd.Views.AboutAuthorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Page.Resources>
        <!--  Стиль кнопки возврата  -->
        <Style TargetType="Button" x:Key="BackButtonStyle">
            <Setter Property="Width" Value="120" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Background" Value="#1A1A1A" />
            <Setter Property="Foreground" Value="#B0B0B0" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="BorderBrush" Value="#2A2A2A" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <!--  Основной стиль для заголовков  -->
        <Style TargetType="TextBlock" x:Key="TitleStyle">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="32" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Center" />
        </Style>

        <!--  Стиль для основного текста  -->
        <Style TargetType="TextBlock" x:Key="BodyTextStyle">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="LineHeight" Value="24" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Opacity" Value="0.9" />
        </Style>

        <!--  Стиль для подзаголовков  -->
        <Style TargetType="TextBlock" x:Key="SubTitleStyle">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Foreground" Value="#00D4FF" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,0,15" />
        </Style>

        <!--  Стиль для социальных кнопок  -->
        <Style TargetType="Button" x:Key="SocialButtonStyle">
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Background" Value="#2A2A2A" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="Transparent"
                            BorderThickness="2"
                            CornerRadius="25"
                            x:Name="border">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#6A4C93" />
                                <Setter Property="BorderBrush" TargetName="border" Value="#00D4FF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Стиль для статистических панелей  -->
        <Style TargetType="Border" x:Key="StatsPanelStyle">
            <Setter Property="Background" Value="#2A2A2A" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="15" />
            <Setter Property="Margin" Value="8" />
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="140" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#3A3A3A" />
        </Style>

        <Style TargetType="TextBlock" x:Key="StatsNumberStyle">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="28" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>

        <Style TargetType="TextBlock" x:Key="StatsLabelStyle">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="#B0B0B0" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Center" />
        </Style>

        <!--  Кнопка доната  -->
        <Style TargetType="Button" x:Key="DonateButtonStyle">
            <Setter Property="Height" Value="56" />
            <Setter Property="MinWidth" Value="200" />
            <Setter Property="Margin" Value="12" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Background" Value="#FF6B00" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            CornerRadius="28"
                            x:Name="border">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#FF8C42" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#FF5500" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <!--  ОСНОВНОЙ КОНТЕЙНЕР  -->
    <Grid>
        <!--  Верхняя панель  -->
        <Border Height="60" VerticalAlignment="Top">
            <TextBlock
                FontFamily="Segoe UI"
                FontSize="14"
                FontWeight="Light"
                Foreground="#606060"
                HorizontalAlignment="Center"
                Text="ABOUT"
                VerticalAlignment="Center" />
        </Border>

        <!--  Основная сетка  -->
        <Grid Margin="0,60,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="240" />
            </Grid.ColumnDefinitions>

            <!--  ЛЕВАЯ КОЛОНКА - Контакты Wixon  -->
            <StackPanel
                Grid.Column="0"
                Margin="20,40,20,20"
                VerticalAlignment="Top">
                <TextBlock
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="#00D4FF"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20"
                    Text="Wixon" />
                <TextBlock
                    FontSize="12"
                    Foreground="#B0B0B0"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15"
                    Text="Developer" />

                <Button
                    Click="SocialButton_Click"
                    HorizontalAlignment="Center"
                    Margin="0,5"
                    Style="{StaticResource SocialButtonStyle}"
                    Tag="https://t.me/CoderW0rker"
                    ToolTip="Telegram Wixon">
                    <TextBlock FontSize="20" Text="📱" />
                </Button>
                <Button
                    Click="SocialButton_Click"
                    HorizontalAlignment="Center"
                    Margin="0,5"
                    Style="{StaticResource SocialButtonStyle}"
                    Tag="https://www.youtube.com/@w_ixon"
                    ToolTip="Wixon's YouTube Channel">
                    <TextBlock FontSize="20" Text="📺" />
                </Button>
                <Button
                    Click="SocialButton_Click"
                    HorizontalAlignment="Center"
                    Margin="0,5"
                    Style="{StaticResource SocialButtonStyle}"
                    Tag="https://github.com/W1xon"
                    ToolTip="GitHub Wixon">
                    <TextBlock FontSize="20" Text="💻" />
                </Button>
            </StackPanel>

            <!--  ЦЕНТРАЛЬНАЯ КОЛОНКА  -->
            <ScrollViewer
                Grid.Column="1"
                HorizontalScrollBarVisibility="Disabled"
                PanningMode="VerticalOnly"
                VerticalScrollBarVisibility="Hidden">
                <StackPanel
                    HorizontalAlignment="Center"
                    Margin="40,20,40,40"
                    MaxWidth="600">

                    <TextBlock
                        Margin="0,20,0,40"
                        Style="{StaticResource TitleStyle}"
                        Text="About the MaxEd Developer" />

                    <!--  Аватар  -->
                    <Border
                        Background="#6A4C93"
                        CornerRadius="60"
                        Height="120"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,30"
                        Width="120">
                        <TextBlock
                            FontSize="50"
                            HorizontalAlignment="Center"
                            Text="👨‍💻"
                            VerticalAlignment="Center" />
                    </Border>

                    <!--  Основной текст  -->
                    <TextBlock Margin="0,0,0,40" Style="{StaticResource BodyTextStyle}">
                        <Run Text="I'm " />
                        <Run
                            FontWeight="Bold"
                            Foreground="#00D4FF"
                            Text="Wixon" />
                        <Run Text=", a programmer who just wanted to help a friend a little, and ended up creating a tool that made life easier." />
                        <LineBreak /><LineBreak />
                        <Run Text="That's how " />
                        <Run
                            FontWeight="Bold"
                            Foreground="#6A4C93"
                            Text="MaxEd" />
                        <Run Text=" was born — your loyal companion in the world of NFS modding and crazy ideas." />
                        <LineBreak /><LineBreak />
                        <Run Text="Big thanks to " />
                        <Run
                            FontWeight="Bold"
                            Foreground="#00D4FF"
                            Text="X" />
                        <Run Text=" — the main modder and idea generator. If MaxEd ever starts making coffee and peeling potatoes, just know — it was his idea!" />
                    </TextBlock>

                    <!--  Блок донатов  -->
                    <Border
                        Background="#0F0F0F"
                        BorderBrush="#FF6B00"
                        BorderThickness="2"
                        CornerRadius="15"
                        Margin="0,0,0,40"
                        Padding="20">
                        <StackPanel>
                            <TextBlock
                                FontSize="22"
                                Foreground="#FFB366"
                                Style="{StaticResource SubTitleStyle}"
                                Text="🎁 Support Our Work" />
                            <TextBlock
                                FontSize="14"
                                Margin="0,0,0,20"
                                Style="{StaticResource BodyTextStyle}"
                                Text="If MaxEd helped you, consider supporting the project!" />
                            <Button
                                Click="DonateButton_Click"
                                Content="Support Project"
                                HorizontalAlignment="Center"
                                Style="{StaticResource DonateButtonStyle}" />
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!--  ПРАВАЯ КОЛОНКА - Контакты X  -->
            <StackPanel
                Grid.Column="2"
                Margin="20,40,20,20"
                VerticalAlignment="Top">
                <TextBlock
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="#6A4C93"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20"
                    Text="X" />
                <TextBlock
                    FontSize="12"
                    Foreground="#B0B0B0"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15"
                    Text="Lead Modder" />

                <Button
                    Click="SocialButton_Click"
                    HorizontalAlignment="Center"
                    Margin="0,5"
                    Style="{StaticResource SocialButtonStyle}"
                    Tag="https://t.me/beamka_live"
                    ToolTip="Telegram X">
                    <TextBlock FontSize="20" Text="📱" />
                </Button>
                <Button
                    Click="SocialButton_Click"
                    HorizontalAlignment="Center"
                    Margin="0,5"
                    Style="{StaticResource SocialButtonStyle}"
                    Tag="https://www.youtube.com/@Beamkago_life"
                    ToolTip="X's YouTube Channel">
                    <TextBlock FontSize="20" Text="📺" />
                </Button>
                <Button
                    Click="SocialButton_Click"
                    HorizontalAlignment="Center"
                    Margin="0,5"
                    Style="{StaticResource SocialButtonStyle}"
                    Tag="https://discord.gg/ВАШ_Community_Link"
                    ToolTip="X's Community">
                    <TextBlock FontSize="20" Text="🏆" />
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
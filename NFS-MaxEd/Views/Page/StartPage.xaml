<Page
    Height="720"
    Title="StartPage"
    Width="1280"
    mc:Ignorable="d"
    x:Class="NFSMaxEd.Views.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{StaticResource BackgroundDark}">

        <!--  Заголовочная область для перетаскивания  -->
        <Border
            Background="Transparent"
            Height="60"
            VerticalAlignment="Top" />

        <!--  Заголовок приложения  -->
        <TextBlock
            FontSize="28"
            FontWeight="Bold"
            Foreground="White"
            HorizontalAlignment="Center"
            Margin="0,15,0,0"
            Text="NFS MaxEd"
            VerticalAlignment="Top" />

        <!--  Основной контент с улучшенным центрированием  -->
        <Grid
            HorizontalAlignment="Center"
            Margin="0,20,0,0"
            VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <!--  Отступ между рядами  -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="30" />
                <!--  Отступ между колонками  -->
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Первый ряд карточек  -->
            <Border
                Grid.Column="0"
                Grid.Row="0"
                Height="350"
                Style="{StaticResource CardStyle}"
                Width="280">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image
                        Height="220"
                        Margin="0,0,0,15"
                        Source="pack://application:,,,/Assets/races.png"
                        Stretch="Uniform"
                        Width="220" />
                    <Button
                        Click="OnRacesClick"
                        Content="Races"
                        Height="50"
                        Style="{StaticResource ButtonStyle}"
                        Width="220"
                        x:Name="RacesButton" />
                </StackPanel>
            </Border>

            <Border
                Grid.Column="2"
                Grid.Row="0"
                Height="350"
                Style="{StaticResource CardStyle}"
                Width="280">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image
                        Height="220"
                        Margin="0,0,0,15"
                        Source="pack://application:,,,/Assets/milestones.png"
                        Stretch="Uniform"
                        Width="220" />
                    <Button
                        Click="OnMilestonesClick"
                        Content="Milestones"
                        Height="50"
                        Style="{StaticResource ButtonStyle}"
                        Width="220"
                        x:Name="MilestonesButton" />
                </StackPanel>
            </Border>

            <Border
                Grid.Column="4"
                Grid.Row="0"
                Height="350"
                Style="{StaticResource CardStyle}"
                Width="280">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image
                        Height="220"
                        Margin="0,0,0,15"
                        Source="pack://application:,,,/Assets/blacklist.png"
                        Stretch="Uniform"
                        Width="220" />
                    <Button
                        Click="OnBlacklistClick"
                        Content="Blacklist"
                        Height="50"
                        Style="{StaticResource ButtonStyle}"
                        Width="220"
                        x:Name="BlacklistButton" />
                </StackPanel>
            </Border>

        </Grid>

        <!--  Нижняя панель с кнопками  -->
        <StackPanel
            HorizontalAlignment="Right"
            Margin="0,0,30,30"
            Orientation="Horizontal"
            VerticalAlignment="Bottom">

            <Button
                Click="OnAboutAuthorClick"
                Content="About Author"
                Height="45"
                Margin="20"
                Style="{StaticResource ButtonStyle}"
                Width="160"
                x:Name="AboutAuthorButton" />
        </StackPanel>

    </Grid>
</Page>
                                 Background="Transparent" Margin="10" BorderBrush="{StaticResource BorderColor}" 
                                 Foreground="{StaticResource TextPrimary}" FontSize="10" />

                        
                        <TextBlock Grid.Column="3" Text="Z" VerticalAlignment="Center" Margin="0,10,10,10" 
                                   Foreground="{StaticResource TextPrimary}" FontSize="10" />
                        <TextBox Grid.Column="3" Text="{Binding FinishLine.PositionZ, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="Transparent" Margin="10" BorderBrush="{StaticResource BorderColor}" 
                                 Foreground="{StaticResource TextPrimary}" FontSize="10"/>
                    </Grid>

                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,3,0,0">
                        <TextBlock Text="Rotation:" VerticalAlignment="Center" Margin="0,0,3,0" 
                                   Foreground="{StaticResource TextSecondary}" FontSize="10"/>
                        <TextBox Width="60" Text="{Binding FinishLine.Rotation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="Transparent" BorderBrush="{StaticResource BorderColor}"
                                 Foreground="{StaticResource TextPrimary}" FontSize="10"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </StackPanel>
                
                <StackPanel Grid.Column="4">
                    <TextBlock Text="Reset Player Trigger" FontSize="16" Style="{StaticResource HeaderStyle}" Margin="0,0,0,15"/>
                    <TextBox Height="180" 
                             IsEnabled="False"
                             VerticalScrollBarVisibility="Auto"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"/>
                </StackPanel>
                        
                
            </Grid>
        </Grid>
    </Grid>
</Border>
            </Grid>
        </ScrollViewer>
    </Grid>

                                                    VerticalAlignment="Top">
                                                    <TextBlock
                                                        FontSize="9"
                                                        Foreground="{StaticResource TextPrimary}"
                                                        Margin="0,0,0,2"
                                                        Text="Y" />
                                                    <TextBox
                                                        Background="Transparent"
                                                        BorderBrush="{StaticResource BorderColor}"
                                                        FontSize="10"
                                                        Foreground="{StaticResource TextPrimary}"
                                                        Text="{Binding FinishMarker.PositionY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                </StackPanel>

                                                <!--  Z  -->
                                                <StackPanel
                                                    Grid.Column="3"
                                                    Margin="2,0"
                                                    VerticalAlignment="Top">
                                                    <TextBlock
                                                        FontSize="9"
                                                        Foreground="{StaticResource TextPrimary}"
                                                        Margin="0,0,0,2"
                                                        Text="Z" />
                                                    <TextBox
                                                        Background="Transparent"
                                                        BorderBrush="{StaticResource BorderColor}"
                                                        FontSize="10"
                                                        Foreground="{StaticResource TextPrimary}"
                                                        Text="{Binding FinishMarker.PositionZ, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                </StackPanel>
                                            </Grid>

                                            <!--  RotationHEX  -->
                                            <UniformGrid
                                                Grid.Row="2"
                                                Margin="0,3,0,0"
                                                Rows="1">

                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock
                                                        FontSize="10"
                                                        Foreground="{StaticResource TextSecondary}"
                                                        Margin="0,0,3,0"
                                                        Text="Rotation:" />
                                                    <TextBox
                                                        Background="Transparent"
                                                        BorderBrush="{StaticResource BorderColor}"
                                                        FontSize="10"
                                                        Foreground="{StaticResource TextPrimary}"
                                                        Text="{Binding FinishMarker.RotationHEX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                </StackPanel>
                                            </UniformGrid>

                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </UniformGrid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>